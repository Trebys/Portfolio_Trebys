---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import UserIcon from "../components/icons/User.astro";
import MainInfo from "../components/MainInfo.astro";
import AboutMe from "../components/AboutMe.astro";


---

<Layout 
title="Portfolio de Trebys - Programador Entry-Level Full Stack"
description="Contrata a Esteban López, Alias Trebys como Programador Entry-Level Full Stack para tu empresa.">

  <main class="px-4">
    <SectionContainer class="py-32 pb-24">
      <MainInfo>
        </slot>
      </MainInfo>
   
      
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="sobre-mi">
      <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
        <UserIcon class="size-10"/>
        Sobre mí
      </h2>
      <AboutMe />
      
    </SectionContainer>


    <SectionContainer id="proyectos">
      <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white ">

        <CodeIcon class="size-10"/>
        Proyectos
      </h2>
      
      <Projects />
    </SectionContainer>

  </div>
  </main>

</Layout>

